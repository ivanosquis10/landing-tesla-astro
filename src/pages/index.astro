---
import Layout from '../layouts/Layout.astro'
import LandingHeader from '../components/LandingHeader.astro'
// import HeroSection from '../components/HeroSection.astro'
import Section from '../components/Section.astro'
import ModelThree from '../components/ModelThree.astro'
import ModelY from '../components/ModelY.astro'
import ModelS from '../components/ModelS.astro'
import ModelX from '../components/ModelX.astro'
import SolarSection from '../components/SolarSection.astro'
---

<Layout title='Electric Cars, Solar & Clean Energy | Tesla'>
  <LandingHeader />
  <main
    class='snap-y snap-mandatory relative h-screen w-full overflow-auto overflow-x-hidden scroll-smooth'
  >
    <div class='snap-center'>
      <Section
        title='Experience Tesla'
        subtitle='Schedule a Demo Drive Today'
        color='white'
      >
        <div slot='footer'>
          <a
            title='demo drive'
            class='border-[3px] border-white backdrop-blur-md capitalize rounded mx-auto px-[90px] py-[5px] inline-block font-medium text-white hover:bg-white hover:text-black transition-colors duration-300'
            href='/'>Demo Drive</a
          >
        </div>

        <video
          slot='video-background'
          class='object-center object-cover h-full w-full'
          src='./public_video.webm'
          autoplay
          muted
          loop></video>
      </Section>
    </div>

    <div class='snap-center'>
      <ModelThree />
    </div>

    <div class='snap-center'>
      <ModelY />
    </div>

    <div class='snap-center'>
      <ModelS />
    </div>

    <div class='snap-center'>
      <ModelX />
    </div>

    <div class='snap-center'>
      <SolarSection />
    </div>
  </main>
</Layout>
