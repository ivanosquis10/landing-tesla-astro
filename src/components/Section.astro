---
const { color, title, subtitle } = Astro.props
const textColor = `text-${color}`
---

<section
  class='landing-section bg-black w-screen h-screen text-center relative overflow-hidden'
  data-header-color={color}
>
  <div class='relative z-30 h-full flex flex-col'>
    <header class='flex flex-col'>
      <h2 class={`px-6 ${textColor} pt-24 text-5xl font-medium`}>
        {title}
      </h2>
      <p class={`${textColor} text-sm tracking-wider px-6 pt-2 pb-3`}>
        {subtitle}
      </p>
    </header>

    <footer class='flex flex-col flex-grow justify-end pb-20'>
      <slot name='footer' />
    </footer>
  </div>

  <div class='absolute top-0 bottom-0 w-full'>
    <slot name='video-background' />
  </div>
</section>
